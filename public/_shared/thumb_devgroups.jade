section.row
  .col-xs-12.col-sm-9
    h3 #{subtitle}
    p #{about}<br>Site: <a href="#{site}" target="_blank">#{site}</a>
h4 Groups around the world
section.row
  - var image_path = root_url[environment] + "assets/images/"
  each devgroup in devgroups
    if !!devgroup.publish
      - var devgroup_id = devgroup.title.replace(/[^\w\s]/g, "").replace(/\s/g, "-").toLowerCase()
      // Fix this url bug
      - var devgroup_url = devgroup.url // + (devgroup.url.indexOf("?") >= 0 ? "&" : "?") + ""; 
      - var devgroup_image = image_path + (devgroup.image ? devgroup.image : image)
      - var devgroup_thumb_url = root_url[environment] + name + '#' + devgroup_id;
      - var devgroup_thumb_title = "DevGroup: "+ devgroup.title;
      section.col-xs-12.col-sm-6.col-md-4
        div(class="anchor" id="#{devgroup_id}")
        div(class="thumbnail")
          a(href="#{devgroup_url}" target="_blank" title="#{devgroup.title}" onclick="ga('send', 'event', 'Groups', '#{subtitle}', '#{devgroup.title}');")
            img.img-responsive.img-rounded(data-async="#{devgroup_image}" src="data:image/gif;base64,")
          div.caption
            h3.devgroup-title #{devgroup.title}
            p.devgroup-description #{devgroup.description}
            p.devgroup-metadata Channel: <span class="label label-danger">#{devgroup.channel}</span> Lang.: <span class="label label-danger">#{devgroup.lang.toUpperCase()}</span>
            p.devgroup-metadata Share:&nbsp;
              a(href="http://www.facebook.com/sharer.php?u=#{encodeURIComponent(devgroup_thumb_url)}&t=#{encodeURIComponent(devgroup_thumb_title)}" target="_blank" rel="nofollow" class="btn btn-sm btn-primary") <i class="icon-facebook"></i>
              &nbsp;
              a(href="https://twitter.com/intent/tweet?text=#{encodeURIComponent(devgroup_thumb_title)}%20#{encodeURIComponent(devgroup_thumb_url)}&via=crp_underground" target="_blank" rel="nofollow" class="btn btn-sm btn-info") <i class="icon-twitter"></i>
              &nbsp;
              a(href="http://www.linkedin.com/shareArticle?mini=true&url=#{encodeURIComponent(devgroup_thumb_url)}&title=#{encodeURIComponent(devgroup_thumb_title)}&summary=#{encodeURIComponent(devgroup.description)}&source=#{title}" target="_blank" rel="nofollow" class="btn btn-sm btn-default") <i class="icon-linkedin"></i>
              &nbsp;
              a(href="https://plus.google.com/share?url=#{encodeURIComponent(devgroup_thumb_url)}&title=#{encodeURIComponent(devgroup_thumb_title)}" target="_blank" rel="nofollow" class="btn btn-sm btn-danger") <i class="icon-gplus"></i>
            p <a class="btn btn-danger btn-block" href="#{devgroup_url}" target="_blank" role="button" onclick="ga('send', 'event', 'Groups', '#{subtitle}', '#{devgroup.title}');"><i class="icon-thumbs-up"></i>&nbsp;Join</a>
